#set($layout="/layout/page.vm")
#set($pageTitle="用户登录")

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>管理系统登录</h3>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    <form action="/user/isLogin" id="loginForm" method="post">
                        <div class="form-group">
                            <label for="userIdentity" class="control-label">用户名</label>
                            <input type="text" placeholder="你的登录名" title="请输入你的用户名"
                            required="" value="" name="userIdentity" id="userIdentity" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="userPassword" class="control-label">密码</label>
                            <input type="password" placeholder="******" title="请输入你的密码"
                                   required="" value="" name="userPassword" id="userPassword" class="form-control">
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" class="i-checks" checked>
                            记住登录
                            <p class="help-block small">(请不要在公众场合勾选此选项)</p>
                        </div>
                        <button class="btn btn-success btn-block">登录</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>